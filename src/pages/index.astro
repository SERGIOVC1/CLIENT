---
import * as CONTENT from "./content.json";
import Container from "../components/Container.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---
  <!-- Importación de contenido desde un archivo JSON.-->
<!--// "CONTENT" contiene datos utilizados en diferentes secciones del CV (por ejemplo, información personal, proyectos, habilidades).-->
<!--// Importación de componentes principales utilizados en la estructura de la página.-->
<!--// Cada componente representa una parte modular de la página:-->
<!--// - "Container" para el contenido principal.-->
<!--// - "Header" para el encabezado de la página.-->
<!--// - "Footer" para el pie de página.-->
<html lang="en">
  <head>
    <!-- Configuración básica de metadatos -->
    <meta charset="utf-8" />
    <!-- Icono del sitio web -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- Optimización de carga de fuentes -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <!-- Carga de la fuente personalizada "Manrope" -->
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@200;300;400;500&display=swap" rel="stylesheet">
    <!-- Configuración de la vista para dispositivos móviles -->
    <meta name="viewport" content="width=device-width" />
    <!-- Generador de contenido (Astro) -->
    <meta name="generator" content={Astro.generator} />
    <!-- Título dinámico de la página, utilizando el nombre del perfil desde el contenido JSON -->
    <title>CV | {CONTENT.profile.name}</title>
  </head>
  <body class="bg-background text-text flex flex-col min-h-screen">
    <!-- Componente del encabezado de la página -->
    <Header />

    <!-- Efecto de barra dinámica -->
    <article class="mx-auto h-fit max-w-3xl w-[95vw] flex flex-nowrap bg-slate-400">
      <!-- Cada barra tiene un efecto de escala al pasar el cursor -->
      <div class="bg-slate-900 hover:scale-x-[2] w-full h-1.5" id="one"></div>
      <div class="bg-red-900 hover:scale-x-[2] w-full h-1.5" id="two"></div>
      <div class="bg-blue-900 hover:scale-x-[2] w-full h-1.5" id="three"></div>
    </article>

    <!-- Contenedor principal de la página -->
    <main class="mx-auto flex-grow max-h-[90vh] md:max-h-[70vh] max-w-3xl overflow-y-scroll grid gap-5 p-5 w-[95vw]">
      <!-- Componente "Container" que gestiona el contenido principal del CV -->
      <Container />
    </main>

    <!-- Componente del pie de página -->
    <Footer />
  </body>
</html>
<style is:global>
	*{
		transition: 350ms ease-in-out;
		font-family: 'Manrope', sans-serif;
	}

	@media only screen and (max-width: 480px){
		*{
			font-size: 12px;
		}
	}

	 /* For webkit-based browsers */
	.overflow-y-scroll::-webkit-scrollbar {
		width: 3px;
	}

	.overflow-y-scroll::-webkit-scrollbar-thumb {
		background-color:#50595e;
	}

	/* For Firefox */
	.overflow-y-scroll {
		scrollbar-width: 1px;
	}
</style>

